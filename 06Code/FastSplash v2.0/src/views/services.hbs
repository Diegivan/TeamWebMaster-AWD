<div class="row">
    {{#each services}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">
                    {{ name }} 
                </h4>
                <hr>
                <h4>
                     {{ description }}
                </h4>
                <hr>
                <h4>Precio (Dolares americanos)</h4>
                 <h4>
                     {{ price }}
                </h4>
            </div>
        </div>
    </div>
    {{/each}}
</div>