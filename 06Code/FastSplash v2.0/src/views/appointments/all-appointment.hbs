<div class="row col-md-10 mx-auto">
    <h2 class="display-6">Citas Historial</h2>
    <div class="mx-auto card">
        <div class="d-flex justify-content-end mt-3">
            <a href="/appointment" class="btn btn-success btn-block">Añadir Cita Nueva</a>
        </div>
        <hr>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Direccion</th>
                    <th scope="col">Referencia</th>
                    <th scope="col">Placa</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Carro</th>
                    <th scope="col">Servicio</th>
                    <th scope="col">Horario</th>
                    <th scope="col">Obs</th>
                    <th scope="col">Status</th>

                </tr>
            </thead>
            <tbody>
                {{#each appointment}}
                <tr>
                    <td scope="row">{{Adress}}</td>
                    <td>{{Reference}}</td>
                    <td>{{Plate}}</td>
                    <td>{{Date}}</td>
                    <td>{{cars}}</td>
                    <td>{{services}}</td>
                    <td>{{hours}}</td>
                    <td>{{Obs}}</td>

                    {{#ifCond status '==' 1}}

                        <td>Cumplida</td>
                        {{else}}
                        <td>Pendiente</td>
                        {{/ifCond}}
                    <td>
                        <div class="d-flex justify-content-around">
                            <a href="/admin/edit-services/{{_id}}" title="Editar"><i class="far fa-edit"></i></a>
                            <!-- Button trigger modal -->
                            <button type="submit" class="btn-invisible" data-bs-toggle="modal"
                                data-bs-target="#deleteConfirmation{{_id}}" title="Eliminar">
                                <i class="far fa-trash-alt" style="color:rgb(211, 34, 34);"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <div class="modal fade" id="deleteConfirmation{{_id}}" tabindex="-1"
                    aria-labelledby="confirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmationModalLabel">Confirmación</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                ¿Está seguro que desea eliminar el registro {{inc @index}}?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <form action="/admin/delete-service/{{_id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </tbody>
        </table>
    </div>

</div>