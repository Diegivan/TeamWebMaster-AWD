{{#if clients}}
<div class="row col-md-10 mx-auto">
    <h2 class="display-6">Clientes</h2>
    <div class="mx-auto card">
        <div class="d-flex justify-content-end mt-3">
            <a href="/admin/clients/new" class="btn btn-success btn-block">Añadir Clientes</a>
        </div>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cédula</th>
                    <th scope="col">Email</th>
                    <!-- <th scope="col">Usuario</th>-->
                    <th scope="col">Fecha de Nacimiento</th>
                    <th scope="col">Fecha de creación</th>
                    <th scope="col">Operaciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr>
                    <td scope="row">{{inc @index}}</td>
                    <td>{{firstName}} {{lastName}}</td>
                    <td>{{ci}}</td>
                    <td>{{email}}</td>
                    <!--<td>
                    {{#each users}}
                        
                        {{userName}}
                        
                    {{/each}}
                    -->
                    </td>
                    <td>{{birthDate}}</td>
                    <td>{{date}}</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a href="/admin/clients/edit/{{_id}}" title="Editar"><i class="far fa-edit"></i></a>
                            <!-- Button trigger modal -->
                            <button type="submit" class="btn-invisible" data-bs-toggle="modal"
                                data-bs-target="#deleteConfirmation{{_id}}" title="Eliminar">
                                <i class="far fa-trash-alt" style="color:rgb(211, 34, 34);"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="deleteConfirmation{{_id}}" tabindex="-1"
                    aria-labelledby="confirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmationModalLabel">Confirmación</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                ¿Está seguro que desea eliminar el registro {{inc @index}}?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <form action="/admin/clients/delete/{{_id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}                
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div class="card mx-auto">
    <div class="card-body">
        <p class="lead">There are not clients yet</p>
        <a href="/admin/clients/new" class="btn btn-success btn-block">Añadir Clientes</a>
    </div>
</div>
{{/if}}