<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Appointments</h3>
        </div>
        <div class="card-body">
            <form action="/admin/edit-appointment/{{appointment._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" value="{{appointment.name}}">
                </div>
                <p></p>
                <div class="form-group">
                    <input type="text" name="lastname" class="form-control" value="{{appointment.lastname}}">
                </div>
                <p></p>
                <div class="form-group">
                    <input type="text" name="CI" class="form-control" value="{{appointment.CI}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" name="Adress" class="form-control" value="{{appointment.Adress}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" name="Date" class="form-control" value="{{appointment.Date}}" disabled>
                </div>

                <div class="form-group">
                    <input type="text" name="Service" class="form-control" value="{{appointment.Service}}" disabled>
                </div>
                <p></p>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>